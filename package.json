{
  "name": "express-typescript-skeleton",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "ts-node scripts/rm.ts dist && tsc -p . && tsc-alias",
    "typecheck": "tsc --pretty --noEmit",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "lint:knip": "knip",
    "fix:knip": "knip --fix --no-exit-code",
    "format": "biome format --write",
    "dev": "pnpm run --stream --color \"/^watch:/\"",
    "deps": "pnpm dlx npm-check-updates@latest --interactive --format group",
    "watch:compile": "tsc --watch --preserveWatchOutput",
    "watch:dev": "wait-on ./dist/src/index.js && node -r ts-node/register -r tsconfig-paths/register --watch ./dist/src/index.js --watch-preserve-output",
    "prepare": "ts-patch install && ts-node scripts/prepare-env.ts"
  },
  "_moduleAliases": {
    "@": "dist/src",
    "@test": "dist/test",
    "@apps": "dist/src/apps",
    "@contexts": "dist/src/contexts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanurb/ultimate-express-typescript.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sanurb/ultimate-express-typescript/issues"
  },
  "homepage": "https://github.com/sanurb/ultimate-express-typescript#readme",
  "dependencies": {
    "@reflet/express": "2.0.0",
    "@reflet/express-middlewares": "2.0.0",
    "@reflet/http": "1.0.0",
    "@samchon/openapi": "4.3.3",
    "@types/compression": "1.8.1",
    "@types/express": "5.0.3",
    "@types/response-time": "2.3.9",
    "compression": "1.8.0",
    "dotenv": "16.5.0",
    "dotenv-expand": "12.0.2",
    "express": "5.1.0",
    "helmet": "8.1.0",
    "install": "0.13.0",
    "listhen": "1.9.0",
    "openai": "5.0.1",
    "pino": "9.7.0",
    "pino-pretty": "13.0.0",
    "response-time": "2.3.3",
    "std-env": "3.9.0",
    "tgrid": "1.1.0",
    "tsc-alias": "1.8.16",
    "tseep": "1.3.1",
    "tstl": "3.0.0",
    "type-fest": "4.41.0",
    "typia": "9.3.1",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@amiceli/vitest-cucumber": "5.1.0",
    "@biomejs/biome": "2.0.0-beta.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/types": "19.8.1",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "22.15.32",
    "@types/supertest": "6.0.3",
    "knip": "5.60.2",
    "lefthook": "1.11.13",
    "supertest": "7.1.1",
    "ts-node": "10.9.2",
    "ts-patch": "3.3.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.3",
    "vitest": "3.1.4",
    "wait-on": "8.0.3"
  },
  "packageManager": "pnpm@10.11.0"
}
